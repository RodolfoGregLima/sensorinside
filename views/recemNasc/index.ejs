                <th scope="col">Mãe</th>
                <th scope="col">Opções</th>
              </tr>
            </thead>
            <tbody>
       <%for(data of recensNasc){ %>
              <tr>
                <th scope="row"><%= data.idRecemNasc %></th> 
                <td><%= data.nome %></td>
                <td><%= data.nomeMae %></td>
                <td> <a href="/recemNasc/edit/<%=data.idRecemNasc%>"> Editar </a>||
                    <a href="/recemNasc/details/<%=data.idRecemNasc%>">Detalhes</a>
                </td>                  
                    
              </tr>
       <% }%>      
            </tbody>
        </table>
                                   
    
    </div>
        
   

